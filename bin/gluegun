#!/usr/bin/env ruby

require 'gluegun'
require 'optparse'


opt_parser = OptionParser.new do |opt|
  opt.banner = "Usage: gluegun COMMAND [OPTIONS]"
  opt.separator  ""
  opt.separator  "Commands"
  opt.separator  "     generate: generates site"
  opt.separator  ""
  opt.separator  "Options"
  opt.on("-h","--help","help") do
    puts opt_parser
  end
end

opt_parser.parse!

case ARGV[0]
when "generate"
  if ARGV[1].empty?
    puts opt_parser
  else
    link = ARGV[1].dup
    site_config_file = Gluegun::Gluegun.raw(link)
    Gluegun::Gluegun.gluegun_generate_pages site_config_file
    Gluegun::Gluegun.gluegun_generate_index site_config_file
  end
else
  puts opt_parser
end
